    <style name="TextLabel" parent="TextAppearance.AppCompat">
        <item name="android:textColorHint">@color/offwhite</item>
        <item name="colorAccent">@color/offwhite</item>
        <item name="colorControlNormal">@color/offwhite</item>
        <item name="colorControlActivated">@color/offwhite</item>
    </style>
</resources>
