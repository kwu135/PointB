<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/login_background"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_initial"
    tools:context="com.example.sophmore.pointb.InitialActivity"
    android:id="@+id/initial_parent">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imageView"
        android:src="@drawable/logo_no_background"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:id="@+id/imageView2"
        android:src="@drawable/pointb_login_text"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true" />

    <android.support.design.widget.TabLayout android:id="@+id/initialTabs"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        app:tabTextColor="@color/offwhite"
        app:tabSelectedTextColor="@color/white"
        app:tabIndicatorColor="@color/white"
        android:layout_below="@+id/imageView2"/>

    <android.support.v4.view.ViewPager android:id="@+id/initialContainer"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_below="@+id/initialTabs"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />

</RelativeLayout>
